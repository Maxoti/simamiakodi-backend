{
  "name": "simamiakodi-backend",
  "version": "1.0.0",
  "description": "Simamiakodi - African-tailored rental management system backend API for Nairobi landlords",
  "main": "server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node server.js",
    "migrate": "node migrate.js",
    "migrate:fresh": "node migrate.js && node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test jest --verbose",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:unit": "cross-env NODE_ENV=test jest tests/unit --verbose",
    "test:integration": "cross-env NODE_ENV=test jest tests/integration --verbose --runInBand"
  },
  "keywords": [
    "rental",
    "property",
    "management",
    "nairobi",
    "kenya",
    "real-estate",
    "landlord",
    "tenant",
    "postgres"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "body-parser": "^2.2.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "qrcode-terminal": "^0.12.0",
    "resend": "^6.7.0",
    "whatsapp-web.js": "^1.34.2"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "routes/**/*.js",
      "utils/**/*.js",
      "middleware/**/*.js",
      "config/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
